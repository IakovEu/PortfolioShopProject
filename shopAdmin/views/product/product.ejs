<h1>
    <%= item.title %>
</h1>
<form action="<%= `save/${item.id}` %>" method="post" class="product-edit-form">
    <div class="product-content">
        <div class="product-edit-fields">
            <div class="field">
                <label for="item-title">Title:</label>
                <input id="item-title" type="text" name="title" value="<%= item.title %>" />
            </div>

            <div class="field">
                <label for="item-description">Description:</label>
                <textarea id="item-description" rows="3" name="description"><%= item.description %></textarea>
            </div>

            <div class="field">
                <label for="item-price">Price:</label>
                <input id="item-price" type="text" name="price" value="<%= item.price %>" />
            </div>

            <div class="field">
                <label for="item-new-images">New images URLs (use line break or a comma):</label>
                <textarea id="item-new-images" rows="3" name="newImages"></textarea>
            </div>
        </div>
        <div class="product-similar">
            <p class="similar-title">Similar products:</p>
            <% if (similar && similar.length) { %>
                <% similar.forEach(function(el) { %>
                    <div class="similar-prod">
                        <p>
                            <%= el.title %>:
                        </p>
                        <p>
                            <%= el.price %>
                        </p>
                        <p>
                            <label for="<%= el.product_id %>">Mark to remove</label>
                            <input type="checkbox" id="<%= el.product_id %>" value="<%= el.product_id %>" name="similarToRemove">
                        </p>
                    </div>
                    <% }); %>
                        <% } %>
                            <p class="similar-other-title">Other products:</p>
                            <div>
                                <% items.forEach(function(el) { %>
                                    <div class="similar-prod">
                                        <% if(el.title && el.id !==currentId ){ %>
                                            <p>
                                                <%= el.title %>:
                                            </p>
                                            <p>
                                                <%= el.price %>
                                            </p>
                                            <p>
                                                <label for="<%= el.id %>">Mark to add</label>
                                                <input type="checkbox" id="<%= el.id %>" value="<%= el.id %>"
                                                    name="similarToAdd">
                                            </p>
                                            <%}%>
                                    </div>
                                    <% }); %>
                            </div>
        </div>
    </div>

    <% if (item.comments?.length) { %>
        <h2>Comments</h2>
        <div class="product-edit-comments">
            <% item.comments.forEach(function(comment) { %>
                <%- include('product-comment', { comment: comment }) %>
                    <% }); %>
        </div>
        <% } %>

            <% if (item.images?.length) { %>
                <h2>Images</h2>
                <div class="product-edit-images">
                    <% item.images.forEach(function(image) { %>
                        <%- include('product-image', { image: image }) %>
                            <% }); %>
                </div>
                <% } %>

                    <div class="product-edit-footer">
                        <button type="submit">Save changes</button>
                        <a href="<%= `remove-product/${item.id}` %>">Delete product</a>
                    </div>
</form>